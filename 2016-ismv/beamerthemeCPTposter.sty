\ProvidesPackage{beamerthemeCPTposter} % this style was created by David Vilar
\mode<presentation>

\definecolor{CPTcolorschemeMaroon}{HTML}{500000}  % e.g. for block title
\definecolor{CPTcolorblockbg}{HTML}{000000}
\definecolor{CPTcolorblockfg}{HTML}{eeeeee}
\definecolor{CPTcolorschemeDarkGrey}{HTML}{222222}  % e.g. for poster background
\definecolor{CPTcolorschemeMedGrey}{HTML}{555555}  %
\definecolor{CPTcolorschemeHeadline}{HTML}{500000}  % for headline bg
\definecolor{CPTcolorschemeFootline}{HTML}{100D09}  % for headline bg

\hypersetup{colorlinks,linkcolor=,urlcolor=CPTcolorschemeMedGrey}
\setbeamercolor{caption name}{fg=CPTcolorschemeDarkGrey}
\usepackage[font=Large]{caption}
\captionsetup[figure]{labelformat=empty}% redefines the caption setup of the figures environment in the beamer class.


% headline colors and fonts
\setbeamercolor{headline}{fg=white,bg=CPTcolorschemeHeadline}
\setbeamercolor{title in headline}{fg=white}
\setbeamercolor{author in headline}{fg=white}
\setbeamercolor{institute in headline}{fg=lightgray}
\setbeamercolor{logo in headline}{fg=black,bg=lightgray}

% footline colors and fonts
\setbeamercolor{footline}{fg=white,bg=CPTcolorschemeHeadline}
\setbeamerfont{footline}{size=\Large}
\setbeamercolor{separation line}{bg=CPTcolorschemeMaroon}

% body colors and fonts
\setbeamercolor*{normal text}{fg=black,bg=CPTcolorschemeDarkGrey}
\newcommand{\columnPadding}[1]{\begin{column}{#1\linewidth}\end{column}}


\setbeamercolor{alerted text}{fg=CPTcolorschemeMaroon}
%\setbeamercolor{structure}{fg=CPTblue}

%  \setbeamertemplate{itemize/enumerate body begin}{
%  }
%  \setbeamertemplate{itemize/enumerate body end}{
%  }

\setbeamertemplate{itemize items}[triangle]
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

% block environment
\setbeamercolor*{block body}{bg=white,fg=black}
\setbeamerfont*{block body}{size=\Large}
\setbeamerfont*{block title}{series=\bf}
\setbeamercolor*{block title}{fg=CPTcolorblockfg,bg=CPTcolorblockbg}
\setbeamertemplate{block begin}{
  \vskip.75em
  \begin{beamercolorbox}[leftskip=1cm,colsep*=.75ex]{block title}%
    \vskip.1em
    \usebeamerfont*{block title}\LARGE\insertblocktitle
  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[colsep*=.75ex,sep=.75ex,vmode]{block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
  }
  \setbeamertemplate{block end}{
  \end{beamercolorbox}
}
% Headline
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{headline}{
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}[T]
      \columnPadding{.02}
      \begin{column}{.18\paperwidth}
        \begin{center}
            \Large Day 2-T03-Pos-27\\
          \includegraphics[width=0.1\paperwidth]{figures/logos/TAM-Logo-white.png}\\
          \includegraphics[]{figures/logos/cpt.png}
        \end{center}
        \vskip1ex
      \end{column}
      \columnPadding{.02}
      \begin{column}{.76\paperwidth}
        \raggedleft
        \vskip4ex
        \vspace{2ex}
        \usebeamercolor{title in headline}{\centering\color{fg}\textbf{\VeryHuge{\inserttitle}}\\[7ex]}
        \usebeamercolor{author in headline}{\color{fg}\veryHuge{\insertauthor}\\[1ex]}
        \usebeamercolor{institute in headline}{\color{fg}\LARGE{\insertinstitute}\\[1ex]}
      \end{column}
      \columnPadding{.02}
    \end{columns}
  \end{beamercolorbox}
  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{2pt}
  \end{beamercolorbox}
}
